<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lincyu.chapter7_broadcastreceiver" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FakeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".BR_Activity">
            <intent-filter>
                <action android:name="lincyu.ACTIVITY"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".BR_Toast">
            <intent-filter>
                <action android:name="lincyu.TOAST"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".BR_Notification">
            <intent-filter>
                <action android:name="lincyu.NOTIFICATION"/>
            </intent-filter>
        </receiver>
        <activity android:name=".ActivityDialog"
            android:label="ActivityDialog">
        </activity>
        <activity android:name=".ActivityNotification"
            android:label="ActivityNotification">
        </activity>
    </application>

</manifest>
